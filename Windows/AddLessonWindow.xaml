<Window x:Class="SchedulePlanner.Windows.AddLessonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchedulePlanner.Windows"
        mc:Ignorable="d"
        Title="AddLessonWindow" Height="356" Width="442">
    <Grid>
        <Label Content="Добавить занятие" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="26"/>
        <TextBox x:Name="startDateTextBox" HorizontalAlignment="Left" Margin="10,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" FontSize="14"/>
        <Label Content="Дата начала" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="endDateTextBox" HorizontalAlignment="Left" Margin="10,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" FontSize="14"/>
        <Label Content="Дата начала" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top"/>
        <Label Content="Группа" HorizontalAlignment="Left" Margin="10,164,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="groupCombobox" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Кабинет" HorizontalAlignment="Left" Margin="228,54,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="classCombobox" HorizontalAlignment="Left" Margin="228,85,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Предмет" HorizontalAlignment="Left" Margin="228,107,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="subjectCombobox" HorizontalAlignment="Left" Margin="228,138,0,0" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="classCombobox_Копировать1" Content="Преподаватель" HorizontalAlignment="Left" Margin="228,164,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="teacherCombobox" HorizontalAlignment="Left" Margin="228,195,0,0" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="addLessonButton" Content="Добавить занятие" HorizontalAlignment="Left" Margin="49,269,0,0" VerticalAlignment="Top" Height="32" Width="135" Click="addLessonButton_Click"/>
        <Button x:Name="dropAllFields" Content="Сбросить все поля" HorizontalAlignment="Left" Margin="250,269,0,0" VerticalAlignment="Top" Height="32" Width="136" Click="dropAllFields_Click"/>

    </Grid>
</Window>
